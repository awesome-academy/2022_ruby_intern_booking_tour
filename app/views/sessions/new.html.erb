<div class="colorlib-loader"></div>
<div id="page">
  <aside id="colorlib-hero">
    <div class="flexslider">
      <ul class="slides">
        <li class="login_background">
          <div class="overlay"></div>
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                <div class="slider-text-inner text-center">
                  <h1><%= t ".login" %></h1>
                </div>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </aside>
  <div id="colorlib-contact">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1 animate-box">
          <%= form_for(:session, url: login_path) do |f| %>
            <div class="row form-group">
              <div class="col-md-12">
                <%= f.label :email, t(".email") %>
                <%= f.email_field :email, class: "form-control", placeholder: t(".your_email_address") %>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-md-12">
                <%= f.label :password, t(".password") %>
                <%= f.password_field :password, class: "form-control", placeholder: t(".enter_your_password") %>
              </div>
            </div>
            <div class="form-group text-center">
              <%= f.submit t(".login"), class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div id="colorlib-subscribe" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center colorlib-heading animate-box">
          <h2><%= t ".sign_Up_Now" %></h2>
          <p><%= t ".singup_description" %></p>
          <%= link_to t(".signup"), signup_path, class: "btn btn-primary" %>
           <%= link_to "Đăng nhập bằng google!", user_google_oauth2_omniauth_authorize_path, class: "btn btn-primary", target: "_blank" %>
        </div>
      </div>
    </div>
  </div>
</div>
