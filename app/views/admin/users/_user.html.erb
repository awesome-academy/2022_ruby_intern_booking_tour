<tr>
  <td>
    <img
        src="https://bootdey.com/img/Content/avatar/avatar7.png"
        alt="">
    </td>
    <td>
      <%= user.name %>
    </td>
    <td>
      <%= user.email %>
    </td>
    <td>
      <%= user.activated ? "YES" : "NO" %>
    </td>
    <td>
      <%= user.role %>
    </td>
    <td>
      <%= link_to edit_admin_user_url(user.id) do %>
        <i class="nc-icon nc-ruler-pencil text-success m-2"></i>
      <% end %>
      <%= link_to admin_user_path(user.id), method: :delete, data: {confirm: t(".delete")}, class: "text-danger", remote: true do %>
        <i class="nc-icon nc-simple-remove text-danger"></i>
      <% end %>
      <%= link_to authorization_path(user.id) do %>
        <i class="nc-icon nc-lock-circle-open text-danger"></i>
      <% end %>
    </td>
  </tr>
