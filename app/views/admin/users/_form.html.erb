<div class="col-12">
  <%= form_for [:admin, @user], remote: true do |f| %>
    <%= render "layouts/error_messages", object: f.object %>
    <div class="col-12">
      <div class="content">
        <div class="row">
          <div class="col-md-4">
            <div class="card card-user">
              <div class="image">
              </div>
              <div class="card-body">
                <div class="author">
                  <div class="row form-group">
                    <div class="col-md-12">
                      <img
                      src="https://bootdey.com/img/Content/avatar/avatar7.png"
                      alt="">
                        <img class="tour__preview" />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card card-user">
                <div class="card-header">
                  <h5 class="card-title"><%= t ".user_form_preview" %></h5>
                </div>
                <div class="card-body">
                  <form>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <%= f.label t(".name") %>
                          <%= f.text_field :name, class: "form-control", placeholder: "Your name" %>
                        </div>
                      </div>
                      <div class="col-md-12">
                        <div class="form-group">
                          <%= f.label t(".email") %>
                          <%= f.email_field :email, class: "form-control", placeholder: "Your email" %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6 pr-1">
                        <div class="form-group">
                          <%= f.label t(".password") %>
                          <%= f.password_field :password, class: "form-control", placeholder: "Your password" %>
                        </div>
                      </div>
                      <div class="col-md-6 pl-1">
                        <div class="form-group">
                          <%= f.label t(".password_confirm") %>
                          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Your password" %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="update ml-auto mr-auto">
                        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
